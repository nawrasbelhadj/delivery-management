{% extends 'base.html.twig' %}
{% block stylesheets %}

{% endblock %}

{% block body %}
    <div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h4 class="card-title">Update User</h4>
                <a href="{{ path("list_users") }}" type="button" class="btn btn-default text-black-50 float-right">List of Users</a>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            {{ form_start(form, { 'action': path('update_user' , {'id' : user.id}), 'method': 'POST'}) }}
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label >CIN</label>
                            {{ form_widget(form.cin, { 'attr': {'class': "form-control" , 'placeholder': "CIN"} }) }}
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <label for="exampleInputEmail1">Email address</label>
                        {{ form_widget(form.email, { 'attr': {'class': "form-control", 'id' : "exampleInputEmail1" , 'placeholder': "Enter email"} }) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label >First Name</label>
                            {{ form_widget(form.firstName, { 'attr': {'class': "form-control" , 'placeholder': "First Name"} }) }}
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <label for="exampleInputEmail1">Last Name</label>
                        {{ form_widget(form.lastName, { 'attr': {'class': "form-control",  'placeholder': "Last Name"} }) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">
                        <label >Governorate </label>
                        {{ form_widget(form.region, { 'attr': {'class': "custom-select form-control-border" , 'placeholder': "Choose Governorate"} }) }}
                    </div>
                    <div class="col-sm-4">
                        <label >Role</label>
                        {{ form_widget(form.userRole, { 'attr': {'class': "custom-select form-control-border",  'placeholder': "Role"} }) }}
                    </div>

                </div>

            </div>
            <!-- /.card-body -->

            <div class="card-footer">

                {{ form_widget(form.save, {'attr': {'type': 'submit','class': 'btn btn-primary'}}) }}
                {{ form_widget(form.reset, {'attr': {'class': 'btn btn-default float-right'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
        <div class="card card-primary">
            <div class="card-header">
                <h4 class="card-title">Update Password</h4>
            </div>
            {{ form_start(formpassword, {'class': 'form-sample', 'action': path('update_user', {'id' : user.id}), 'method': 'POST'}) }}
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6">
                        <label >New Password</label>
                        {{ form_widget(formpassword.password.first, { 'attr': {'class': "form-control", 'placeholder': "Password"} }) }}
                    </div>
                    <div class="col-sm-6">
                        <label >Confirm New Password</label>
                        {{ form_widget(formpassword.password.second, { 'attr': {'class': "form-control", 'placeholder': "Confirm Password"} }) }}
                    </div>
                </div>
            </div>
            <div class="card-footer">

                {{ form_widget(formpassword.save, {'attr': {'type': 'submit','class': 'btn btn-primary'}}) }}
                {{ form_widget(formpassword.reset, {'attr': {'class': 'btn btn-default float-right'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
        </div>
    </div>
    <!-- /.card -->
{% endblock %}