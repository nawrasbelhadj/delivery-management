{% extends 'base.html.twig' %}
{% block stylesheets %}

{% endblock %}

{% block body %}
    <div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="card card-primary">
            <div class="card-header">
                <h4 class="card-title">Add User</h4>
                <a type="button" href="{{ path("list_users") }}"  class="btn btn-default text-black-50 float-right">List of Users</a>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
                {{ form_start(form, { 'action': path('add_user'), 'method': 'POST'}) }}
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                           <div class="form-group">
                               <label >CIN *</label>
                            {{ form_widget(form.cin, { 'attr': {'class': "form-control" , 'placeholder': "CIN"} }) }}
                             </div>
                        </div>
                        <div class="col-sm-6">
                            <label for="exampleInputEmail1">Email *</label>
                            {{ form_widget(form.email, { 'attr': {'class': "form-control", 'id' : "exampleInputEmail1" , 'placeholder': "Enter email"} }) }}
                        </div>
                        </div>

            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label >First Name *</label>
                        {{ form_widget(form.firstName, { 'attr': {'class': "form-control" , 'placeholder': "First Name"} }) }}
                    </div>
                </div>
                <div class="col-sm-6">
                    <label for="exampleInputEmail1">Last Name *</label>
                    {{ form_widget(form.lastName, { 'attr': {'class': "form-control",  'placeholder': "Last Name"} }) }}
                </div>
            </div>
                    <div class="row">
                        <div class="col-sm-6">
                                <label >Governorate *</label>
                                {{ form_widget(form.region, { 'attr': {'class': "custom-select form-control-border" , 'placeholder': "Choose Governorate"} }) }}
                        </div>
                        <div class="col-sm-6">
                            <label >Role *</label>
                            {{ form_widget(form.userRole, { 'attr': {'class': "custom-select form-control-border",  'placeholder': "Role"} }) }}
                        </div>
                    </div>
                    <br>
                    <div class="row">
                    <div class="col-sm-6">
                        <label >Password *</label>
                        {{ form_widget(form.password.first, { 'attr': {'class': "form-control", 'placeholder': "Password"} }) }}
                    </div>
                        <div class="col-sm-6">
                            <label >Confirm Password *</label>
                            {{ form_widget(form.password.second, { 'attr': {'class': "form-control", 'placeholder': "Confirm Password"} }) }}
                        </div>
                    </div>
                    <br>
                    <h4>Optional Information</h4>
                    <div class="row">
                        <div class="col-sm-4">
                            <label >Phone Number </label>
                            {{ form_widget(form.phoneNumber, { 'attr': {'class': "form-control" , 'placeholder': "Phone Number"} }) }}
                        </div>
                        <div class="col-sm-4">
                            <label > Adress </label>
                            {{ form_widget(form.adress, { 'attr': {'class': "form-control",  'placeholder': "Adress"} }) }}
                        </div>
                        <div class="col-sm-4">
                            <label >City</label>
                            {{ form_widget(form.city, { 'attr': {'class': "form-control",  'placeholder': "City"} }) }}
                        </div>
                    </div>


                </div>
                <!-- /.card-body -->

                <div class="card-footer">

                    {{ form_widget(form.save, {'attr': {'type': 'submit','class': 'btn btn-primary'}}) }}
                    {{ form_widget(form.reset, {'attr': {'class': 'btn btn-default float-right'}}) }}
                </div>
            {{ form_end(form) }}
        </div>
    </div>
    </div>
        <!-- /.card -->
{% endblock %}