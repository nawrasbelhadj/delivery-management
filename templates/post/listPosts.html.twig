{% extends 'base.html.twig' %}
{% block stylesheets %}
{% endblock %}

{% block body %}
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-sm-flex justify-content-between align-items-start">
                    <div>
                        <h4 class="card-title card-title-dash">List of Governorates </h4>

                        <p class="card-subtitle card-subtitle-dash">number of posts</p>
                    </div>
                    <div>
                        <a class="btn btn-primary btn-lg text-white mb-0 me-0" type="button" href="{{ path("list_gov") }}"><i class="mdi mdi-plus-circle-outline"></i>Return</a>
                    </div>
                </div>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                        <tr>
                            <th>
                                Governorate
                            </th>
                            <th>
                                Number of posts
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        {% set repeatedRegion = [] %}
                        {% for post in posts %}
                            {% if post.regionPost not in repeatedRegion %}
