{% block stylesheets %}

    <link rel="stylesheet" href="{{ asset('dist/css/style.css') }}">
{% endblock %}

{% block body  %}
    <!-- partial:index.partial.html -->
    <div id="login-form-wrap">
        <h2>Login</h2>
        <form id="login-form" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <p>
                <input type="text" id="email" name="email" placeholder="Enter your Email" required><i class="validation"><span></span><span></span></i>
            </p>
            <p>
                <input type="password" id="password" name="password" placeholder="Your Password" required><i class="validation"><span></span><span></span></i>
            </p>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            <p>
                <input type="submit" id="login" value="Login">
            </p>
        </form>
        <div id="create-account-wrap">
        </div><!--create-account-wrap-->
    </div><!--login-form-wrap-->
    <!-- partial -->

{% endblock body%}