{% extends 'base.html.twig' %}


{% block body %}
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h4 class="card-title">Issue Alert</h4>
                    <a href="{{ path("history_courrier") }}" type="button" class="btn btn-default text-black-50 float-right">List of Couriers</a>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                {{ form_start(form, { 'action': path('alert_courrier', {'id': courrier.id}), 'method': 'POST'}) }}
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-10">
                            <label >Choose Alert Type *</label>
                            {{ form_widget(form.typeAlert, { 'attr': {'class': "custom-select form-control-border" , 'placeholder': "Select Type"} }) }}
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">

                    {{ form_widget(form.save, {'attr': {'type': 'submit','class': 'btn btn-primary'}}) }}
                    {{ form_widget(form.reset, {'attr': {'class': 'btn btn-default float-right'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <!-- /.card -->
{% endblock %}

