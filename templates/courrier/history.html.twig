{% extends 'base.html.twig' %}
{% block stylesheets %}
{% endblock %}

{% block body %}
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">

                <div class="card-body">
                    <div class="d-sm-flex justify-content-between align-items-start">
                        <div>
                            <h4 class="card-title card-title-dash">Pending Requests</h4>
                            <p class="card-subtitle card-subtitle-dash">You have 50+ new requests</p>
                        </div>
                        <div>
                            <a class="btn btn-primary btn-lg text-white mb-0 me-0" type="button" href="{{ path("addcourrier_courrier") }}"><i class="mdi mdi-plus-circle-outline"></i>Ajouter Courrier</a>
                        </div>
                    </div>
                    <div class="table-responsive pt-3">
                        <table class="table table-bordered">
                            <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Code barre
                                </th>
                                <th>
                                    Message
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for courrier in courriers %}
                                <tr>
                                    <td>{{ courrier.id }}</td>
                                    <td>{{ courrier.codeBarre }}</td>
                                    <td>{{ courrier.postDeparture }}</td>
                                    <td>
                                        <a type="button" class="btn btn-outline-secondary btn-rounded btn-icon" href="{{ path('timeline_courrier', {'id' : courrier.id}) }}"><i class="ti-eye text-danger"></i></a>
                                        <a type="button" class="btn btn-outline-secondary btn-rounded btn-icon" href="{{ path('updatecourrier_courrier', {'id' : courrier.id}) }}"><i class="ti-pencil text-danger"></i></a>
                                        <a type="button" class="btn btn-outline-secondary btn-rounded btn-icon" href="{{ path('delete_courrier', {'id' : courrier.id}) }}"><i class="ti-trash text-danger"></i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}