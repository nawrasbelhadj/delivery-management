{% extends 'base.html.twig' %}

{% block body %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Timeline</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href={{ path('dashboard') }}>Home</a></li>
                        <li class="breadcrumb-item active">Timeline</li>
                    </ol>
                </div>
            </div>
        </div>
        <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">

            <!-- Timelime example  -->
            <div class="row">
                <div class="col-md-12">
                    <!-- The time line -->
                    <div class="timeline">
                        <!-- timeline time label -->
                        <div class="time-label">
                            <span class="bg-red">{{ "now"|date("m/d/Y") }}</span>
                        </div>
                        <!-- /.timeline-label -->
                        {% for event in events %}
                        <!-- timeline item -->
                        <div>
                            <i class="fas fa-envelope bg-blue"></i>
                            <div class="timeline-item">
                                <span class="time"><i class="fas fa-clock"></i> {{  event.updatedAt|date("H:i:s") }}</span>
                                <h3 class="timeline-header"><a href="#">Courier {{ event.courrier.codeBarre }} Sent At {{ event.updatedAt|date("m/d/Y") }}</a> from {{  event.postFrom }} to {{ event.postTo }}</h3>

                                <div class="timeline-body">
                                  Status: Out for delivery
                                    <br>
                                  Type: {{ event.type }}

                                </div>
{#                                <div class="timeline-footer">#}
{#                                    <a class="btn btn-primary btn-sm">Update Status</a>#}
{#                                    <a class="btn btn-danger btn-sm">Validate</a>#}
{#                                </div>#}
                            </div>
                        </div>
                        {% endfor %}
                        <!-- END timeline item -->
                        <!-- timeline item -->




                        <div>
                            <i class="fas fa-clock bg-gray"></i>
                        </div>
                    </div>
                </div>
                <!-- /.col -->
            </div>
        </div>
        <!-- /.timeline -->

    </section>
    <!-- /.content -->

{% endblock %}

