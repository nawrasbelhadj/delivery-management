{% extends 'base.html.twig' %}
{% block stylesheets %}
{% endblock %}

{% block body %}
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">

            <div class="card-body">
                <div class="d-sm-flex justify-content-between align-items-start">
                    <div>
                        <h4 class="card-title card-title-dash">Ajouter courrier</h4>
                    </div>
                    <div>
                        <a class="btn btn-primary btn-lg text-white mb-0 me-0" type="button" href="{{ path("history_courrier") }}"><i class="mdi mdi-view-list"></i>Liste Courrier</a>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="my-custom-class-for-errors">
                        {{ form_errors(form) }}
                    </div>
                    {{ form_start(form, {'action': path('history_courrier'), 'method': 'GET'}) }}
                    <div class="col">
                        <label>{{ form_label(form.codeBarre) }}</label>
                        {{ form_widget(form.codeBarre) }}
                    </div>
                    <div class="col">
                        <label>{{ form_label(form.postDeparture) }}</label>
                        {{ form_widget(form.postDeparture) }}
                    </div>
                    {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary btn-icon-text'}}) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}