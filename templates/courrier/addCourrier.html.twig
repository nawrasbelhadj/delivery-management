{% extends 'base.html.twig' %}
{% block stylesheets %}

{% endblock %}

{% block body %}
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h4 class="card-title">Add Courier</h4>
                    <a href="{{ path("history_courrier") }}" type="button" class="btn btn-default text-black-50 float-right">List of Couriers</a>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                {{ form_start(form, { 'action': path('add_courrier'), 'method': 'POST'}) }}
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label >Barcode *</label>
                                {{ form_widget(form.codeBarre, { 'attr': {'class': "form-control" , 'placeholder': "Barcode"} }) }}
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <label >Type *</label>
                            {{ form_widget(form.typeCourrier, { 'attr': {'class': "custom-select form-control-border", 'id' : "exampleInputEmail1" , 'placeholder': "Select Type"} }) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <label >Titre *</label>
                            {{ form_widget(form.title, { 'attr': {'class': "form-control" , 'placeholder': "Title"} }) }}
                        </div>
                        <div class="col-sm-6">
                            <label >Arrival Post * </label>
                            {{ form_widget(form.postArrival, { 'attr': {'class': "form-control",  'placeholder': "Destination"} }) }}
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-sm-12">
                            <label >Message</label>
                            {{ form_widget(form.message, { 'attr': {'class': "form-control", 'rows' : '3' , 'placeholder': "Insert Message"} }) }}
                        </div>
                    </div>

                    <br>

                    <br>



                </div>
                <!-- /.card-body -->

                <div class="card-footer">

                    {{ form_widget(form.save, {'attr': {'type': 'submit','class': 'btn btn-primary'}}) }}
                    {{ form_widget(form.reset, {'attr': {'class': 'btn btn-default float-right'}}) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <!-- /.card -->
{% endblock %}